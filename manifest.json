{
  "name": "Website Checker",
  "description": "Website Checker using check-host.net API",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["https://check-host.net/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hi.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/checker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}